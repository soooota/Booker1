<link rel="stylesheet" type="text/css" href="index.css">
 <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
 <% end %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% @books.each do|book|%>
  <tbody>
      <tr>
        <td><%=book.title%></td>
        <td><%=book.body%></td>
        <td><%=link_to "show",  book_path(book.id) %>
        <td><%=link_to "Edit",  edit_book_path(book.id) %></td>
        <td>
          <%= link_to 'Destroy', book_path(book.id) ,method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
      </tr>
      <% end %>

  </tbody>
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
   <div class="alert alert-warning">
     <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %> </li>
        <% end %>
     </ul>
   </div>
   <% end %>

 <%= form_for(@book) do |f| %>

    <a>Title</a><br>
    <%= f.text_field :title %><br>
  <a>Body</a><br>
    <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
    <% end %>